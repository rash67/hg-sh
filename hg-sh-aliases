alias h=hg  
alias h-show='hg show'
alias h-co='hg update'
alias h-st='hg status'
alias h-s='hg statusummary'
alias h-br='hg bookmarks'
alias h-nb=_h-nb
alias h-chkpoint='hg status | hg commit -A --logfile -'
alias h-log='hg log -v'
alias h-lg='hg log -v'
alias h-back='hg reset .^'
alias h-rt='hg revert --all'
alias h-nc='hg uncommit -a'
#alias h-repull='hg pull --rebase'
alias h-repull=_h-repull
alias h-hei='hg histedit -k .~10'
alias h-he='hg histedit -k '
alias h-rb='hg rebase '
alias h-amend-quick='hg log -r . | hg commit --amend -l -'

