function _h-nb() {
  if [[ $2 != "" ]]; then
			hg update $2             
	fi
	
	hg bookmarks $1
}

function _h-repull() {
  bookmark=`hg bo | grep '*' | cut -f 3 -d' '`
	hg pull --rebase
	hg update $bookmark
}

        
